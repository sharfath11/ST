
    <section>
      <div class="container mt-5">
        <div class="row">
           {{#each products}}
            <div class="col-md-3">
              <div class="card" style="width: 18rem;">
                <img
                  class="card-img-top"
                  src="{{this.Image}}"
                  alt="Card image cap"
                />
                <div class="card-body" style="background-color: #25588f;">
                  <h5 class="card-title">{{this.name}}</h5>
                  <p class="card-text">{{this.Discription}}</p>
                  
                </div>
              </div>
            </div>
           {{/each}}
        </div>
      </div>
    </section>

    