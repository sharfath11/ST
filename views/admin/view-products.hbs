
<body>

 

<section  >
    <div class="container">
        <div class="row mt-5">
            <a href="/admin/add-product"class="btn btn-success ml-auto" >Add products</a>

        </div>
        <table class="table mt-5">
          
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">title</th>
      <th scope="col">catagory</th>
      <th scope="col">Discription</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">
        <span class="create_index"></span>
        
      </th>
      <td>{{this.Name}}</td>
      <td>{{this.Catagory}}</td>
      <td>{{this.Discription}}</td>
      <td><img style="width: 50px;height:50px;" src="/product-image/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick='return confirm ("Are you want to delete {{this.Name}}?")'>Delete</a></td>
      </td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
    </div>
</section>

</body>
<script>
    var divs = document.querySelectorAll('.create_index');
    for (var i = 0; i < divs.length; ++i) {
        divs[i].innerHTML = i + 1;
    }
</script>



    