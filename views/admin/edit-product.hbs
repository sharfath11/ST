<section>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-center">Edit prodect</h2><br />
        <form
          action="/admin/edit-product/{{product._id}}"
          method="post"
          enctype="multipart/form-data"
        >
          <label for="">Name</label>
          <input type="text " name="Name" class="form-control" value="{{product.Name}}" />
          <label for="">catagory</label>
          <input type="text " name="Catagory" class="form-control" value="{{product.Catagory}}" />
          <label for="">Price</label>
          <input type="text " name="Price" class="form-control" value="{{product.Price}}" />
          <label for="">Discription</label>
          <input type="text " name="Discription" class="form-control" value="{{product.Discription}}" />
          <label for="">Image</label>
          <img style="width: 50px;height:50px;" src="/product-image/{{product._id}}.jpg" alt="" id="imgView" class="mt-3">
          <input type="file" name="Image" class="form-control" onchange="Viewimg(event)">
          <button type="submit" class="btn btn-success mt-4">Submit</button>

        </form>

      </div>
    </div>
  </div>
</section>
<script>
  function Viewimg(event){
    document.getElementById("imgView").src=URL.createObjectURL(event.target.files[0])
      }
</script>